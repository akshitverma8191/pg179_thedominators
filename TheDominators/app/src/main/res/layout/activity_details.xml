<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/carddetails"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                card_view:contentPadding="8dp"
                card_view:cardCornerRadius="7dp"
                card_view:cardElevation="8dp"
                card_view:cardBackgroundColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp">
                <!--Text View over Card View-->
                <ImageView
                    android:id="@+id/url"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="200dp"
                    android:textColor="#fff"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_below="@+id/carddetails">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:id="@+id/txtname"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:layout_below="@+id/txtname"
                        android:layout_margin="8dp"
                        android:id="@+id/name"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:id="@+id/txtcity"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="20dp"
                        android:layout_below="@+id/txtcity"
                        android:layout_margin="8dp"
                        android:id="@+id/city"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="River"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:id="@+id/txtriver"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="20dp"
                        android:layout_below="@+id/txtriver"
                        android:layout_margin="8dp"
                        android:id="@+id/river"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:id="@+id/txtabout"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="20dp"
                        android:layout_below="@+id/txtabout"
                        android:layout_margin="8dp"
                        android:id="@+id/about"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click Here For Location"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:id="@+id/txtlocation"
                        android:textStyle="bold"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>