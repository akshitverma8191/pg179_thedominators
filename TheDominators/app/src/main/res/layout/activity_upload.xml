<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                android:id="@+id/etName"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter City"
                android:id="@+id/etCity"
                android:layout_below="@+id/etName"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter About"
                android:id="@+id/etAbout"
                android:layout_below="@id/etCity"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Latitude"
                android:id="@+id/etLati"
                android:layout_below="@id/etAbout"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Longitude"
                android:id="@+id/etLongi"
                android:layout_below="@+id/etLati"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter River"
                android:id="@+id/etRiver"
                android:layout_below="@+id/etLongi"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"/>

            <ImageView
                android:id="@+id/imgview"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:layout_below="@id/etRiver"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:id="@+id/btnupload"
                android:layout_below="@id/imgview"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Image"
                android:id="@+id/btnchs"
                android:layout_below="@id/imgview"
                android:layout_toRightOf="@+id/btnupload"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/btnback"
                android:layout_below="@id/imgview"
                android:layout_toLeftOf="@+id/btnupload"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:id="@+id/progressbar"
                android:layout_height="wrap_content"
                android:visibility="gone"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_above="@+id/btnupload"
                android:progressDrawable="@drawable/greenprogress"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
